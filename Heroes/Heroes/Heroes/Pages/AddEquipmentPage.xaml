<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Heroes.AddEquipmentPage"
             BackgroundColor="{StaticResource BackgroundColor}" >
  <RelativeLayout>
    <Label Text="Equipment" Style="{StaticResource PageTitle}"/>
    <ListView ItemsSource="{Binding AdventuringGears}" Style="{StaticResource AdventuringGearsList}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" Detail="{Binding Description}" Command="{Binding AddItem}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </RelativeLayout>
</ContentPage>