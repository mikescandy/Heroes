<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Heroes;assembly=Heroes"
             x:Class="Heroes.AnotherPage">
  <StackLayout Orientation="Vertical" Padding="20" Spacing="20">
    <StackLayout Orientation="Horizontal" HeightRequest="100" BackgroundColor="Blue"></StackLayout>
    <Label Text="Test"  HorizontalOptions="Center" Style="{StaticResource LabelStyle}" />
    <Label Text="{Binding Character.Name}"  HorizontalOptions="Center" />
    <Label Text="{Binding Character.CharacterClass}"  HorizontalOptions="Center" IsVisible="{Binding Character.Visible}" />
  </StackLayout>
</ContentPage>