              <Grid  RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=0, Constant=200}">
                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Source="hexagon_small"></Image>
                <Label Text="STR" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="0" Grid.Column="1" />
                <Label Text="DEX" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="1" Grid.Column="1" />
                <Label Text="CON" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="2" Grid.Column="1" />
                <Label Text="INT" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="3" Grid.Column="1" />
                <Label Text="WIS" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="4" Grid.Column="1" />
                <Label Text="CHA" Style="{StaticResource CharacterLabel}" Margin="10" FontSize="20" Grid.Row="5" Grid.Column="1" />
                <Label Text="{Binding Character.Alignment}" Style="{StaticResource CharacterLabelValue}" Grid.Row="1" Grid.Column="1" />
                <Label Text="{Binding Character.Experience}" Style="{StaticResource CharacterLabelValue}" Grid.Row="1" Grid.Column="4" />
              </Grid>
